@using ECommerce.Models
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model List<Category>
    <div class="card shadow border-0 mt-4">
<div class="card-header bg-dark ml-0 py-6">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white">Category List</h2>
        </div>
    </div>
</div>
<div class="card body p-4">
<div class="row pb-3">
    <div class="col-6">
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
            <i class="bi bi-plus-square-fill"></i> CREATE NEW CATEGORY
        </a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            CATEGORY NAME
        </th>
        <th>
            DISPLAY ORDER
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(a=>a.Id))
        {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.DisplayOrder</td>
            <td>
                <div class ="w-75 btn-group" role="group">
                    <a asp-controller="Category" asp-action="Edit" asp-route-categoryId="@obj.Id" class="btn btn-dark mx-2">
                        <i class="bi bi-pencil-square"></i> EDIT
                    </a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@obj.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash3-fill"></i> DELETE
                    </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
</div>


